<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextSubtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="CalendarTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlActivated">@color/background_button</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_tertiary</item>
        <item name="android:colorBackground">@color/background_black</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="CalendarWeekText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="EventItem">
        <item name="android:background">@color/background_card</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/background_dialog</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorPrimary">@color/text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <!-- 전체 화면 다이얼로그 스타일 추가 -->
    <style name="FullScreenDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background_black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/background_black</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorPrimary">@color/text_primary</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <style name="MessageUser">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:maxWidth">@dimen/max_width_message</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="MessageAI">
        <item name="android:background">@color/background_card</item>
        <item name="android:maxWidth">@dimen/max_width_message</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textColorSecondary">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationGroupHeader">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <style name="NavigationIconStyle">
        <item name="android:tint">@color/text_primary</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="CustomTimePicker" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorControlNormal">@color/text_secondary</item>
    </style>
</resources>