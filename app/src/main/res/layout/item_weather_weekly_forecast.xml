<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_large">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textWeeklyDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월요일"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textWeeklyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7/29"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오전"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_small"/>

            <ImageView
                android:id="@+id/imageAmIcon"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:src="@android:drawable/ic_menu_day"
                app:tint="@color/text_primary" />

            <TextView
                android:id="@+id/textAmCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맑음"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/textAmPrecip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강수: 0%"
                android:textColor="@color/text_tertiary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_small"/>

            <ImageView
                android:id="@+id/imagePmIcon"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:src="@android:drawable/ic_menu_day"
                app:tint="@color/text_primary" />

            <TextView
                android:id="@+id/textPmCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구름많음"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/textPmPrecip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강수: 20%"
                android:textColor="@color/text_tertiary" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textWeeklyHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32°"
                android:textColor="@color/temp_max_red"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textWeeklyLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24°"
                android:textColor="@color/temp_min_blue"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>