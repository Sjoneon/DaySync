<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 지도 뷰 -->
    <com.naver.maps.map.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 상단 네비게이션 정보 패널 -->
    <LinearLayout
        android:id="@+id/layoutNavigationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#F5F5F5"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp">

        <!-- 현재 단계 -->
        <TextView
            android:id="@+id/textNavigationStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1단계: 출발 정류장으로 이동"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 남은 거리 -->
        <TextView
            android:id="@+id/textDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남은 거리: 계산 중..."
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- 예상 시간 -->
        <TextView
            android:id="@+id/textEstimatedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예상 시간: 계산 중..."
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 하단 종료 버튼 -->
    <Button
        android:id="@+id/buttonExitNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="#2196F3"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="길안내 종료"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:elevation="4dp" />

</RelativeLayout>