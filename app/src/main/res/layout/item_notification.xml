<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#444444"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 알림 내용 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNotificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알림 제목"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textNotificationContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="알림 내용이 여기에 표시됩니다."
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textNotificationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="10분 전"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 알림 상태 표시 및 삭제 버튼 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- 읽지 않은 알림 표시 -->
            <View
                android:id="@+id/viewUnread"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="end"
                android:layout_marginBottom="16dp"
                android:background="@drawable/notification_unread_dot" />

            <!-- 삭제 버튼 -->
            <ImageButton
                android:id="@+id/buttonDeleteNotification"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="알림 삭제"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="#CCCCCC" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>