<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_xlarge">

        <!-- 경로 검색 입력 섹션 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xlarge"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="@dimen/corner_radius"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_xlarge">

                <!-- 경로 검색 & 지도 보기 버튼 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_xlarge"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/route_search_title"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonMapView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background"
                        android:text="@string/map_view_button"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <!-- 출발지 입력 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_xlarge"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:src="@android:drawable/ic_menu_mylocation"
                        app:tint="@color/text_primary" />

                    <EditText
                        android:id="@+id/editStartLocation"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/start_location_hint"
                        android:inputType="text"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- 도착지 입력 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_xlarge"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:src="@android:drawable/ic_menu_directions"
                        app:tint="@color/text_primary" />

                    <EditText
                        android:id="@+id/editEndLocation"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/destination_hint"
                        android:inputType="text"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- 경로 검색 버튼 (로딩 상태 포함) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonSearchRoute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background"
                        android:padding="@dimen/padding_large"
                        android:text="@string/search_route"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <!-- 검색 중 로딩 오버레이 -->
                    <LinearLayout
                        android:id="@+id/layoutLoading"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_button_background_loading"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ProgressBar
                            android:id="@+id/progressBarLoading"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/text_primary" />

                        <TextView
                            android:id="@+id/textSearching"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/searching_route"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 추천 경로 타이틀 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/recommended_routes"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <!-- 경로 목록 영역 (로딩/메시지/리스트를 같은 위치에 표시) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp">

            <!-- 경로 검색 결과가 없을 때 메시지 -->
            <TextView
                android:id="@+id/textNoRoutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/no_routes"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_large"
                android:visibility="visible" />

            <!-- 경로 검색 결과 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRoutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:visibility="gone" />

            <!-- 경로 검색 중 로딩 표시 -->
            <LinearLayout
                android:id="@+id/layoutRouteLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_xlarge"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경로를 검색하고 있습니다..."
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</ScrollView>